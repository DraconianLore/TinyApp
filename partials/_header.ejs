<!-- views/partials/_header.ejs -->
<div style='display: flex; flex-direction: column; align-items: center'>
    <a href="/urls">
        <h1>TinyAPP</h1>
    </a>
    <div style='display: flex; align-self: flex-start'>
        <a href='/urls/new'>Create a new URL</a>
    </div>
    <div style='display: flex; align-self: flex-end;'>
        <% if (!user_id) { %>
        <div>
            <a href="/login">
                <button type="submit" class="btn btn-primary">Log in</button>
            </a><a href="/register">
                <button type="submit" class="btn btn-success">Register</button>
            </a>
        </div>
        <% } else { %>
        <div align=right>
            <p>Welcome back <strong>
                    <%= user[user_id].email %></strong></p>
            <form method="POST" action="/logout">
                <button type="submit" class="btn btn-danger">Log Out</button></form>
        </div>
        <% } %>
        <hr>
    </div>
    <div style="display: flex; flex-direction: column; flex-shrink: 1; maxWidth: 500px; justify-content: flex-start">